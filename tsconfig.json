{
  "exclude": ["build.config.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "declaration": true
  }
}
